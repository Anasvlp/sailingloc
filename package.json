{
  "name": "sailingloc",
  "version": "1.0.0",
  "description": "Application de location de bateaux inspir√©e d'Airbnb",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
